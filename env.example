# 🤖 KirveHub Bot - Environment Variables
# DigitalOcean Ubuntu Production Environment için optimize edilmiş

# =============================================================================
# BOT CONFIGURATION
# =============================================================================

# Bot Token (Telegram BotFather'dan alın)
BOT_TOKEN=your_bot_token_here

# Admin User ID (Telegram user ID)
ADMIN_USER_ID=your_admin_id_here

# Database URL (PostgreSQL)
DATABASE_URL=postgresql://kirvehub:your_password@localhost:5432/kirvehub_db

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Production mode (true/false)
PRODUCTION_MODE=true

# Debug mode (true/false)
DEBUG_MODE=false

# Maintenance mode (true/false)
MAINTENANCE_MODE=false

# =============================================================================
# SERVER SETTINGS
# =============================================================================

# Server host
SERVER_HOST=0.0.0.0

# Server port
SERVER_PORT=8000

# Worker processes
WORKER_PROCESSES=2

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Database pool size
DB_POOL_SIZE=10

# Database max overflow
DB_MAX_OVERFLOW=20

# Database pool timeout
DB_POOL_TIMEOUT=30

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/bot.log

# Log max size (bytes)
LOG_MAX_SIZE=10485760

# Log backup count
LOG_BACKUP_COUNT=5

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Max concurrent updates
MAX_CONCURRENT_UPDATES=50

# Update timeout (seconds)
UPDATE_TIMEOUT=30

# Rate limit delay (seconds)
RATE_LIMIT_DELAY=0.1

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable rate limiting (true/false)
ENABLE_RATE_LIMITING=true

# Max messages per minute
MAX_MESSAGES_PER_MINUTE=60

# Enable IP whitelist (true/false)
ENABLE_IP_WHITELIST=false

# =============================================================================
# POINT SYSTEM SETTINGS
# =============================================================================

# Points per message
POINT_PER_MESSAGE=0.04

# Daily point limit
DAILY_POINT_LIMIT=5.00

# Flood protection seconds
FLOOD_PROTECTION_SECONDS=10

# Min message length for points
MIN_MESSAGE_LENGTH=5

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Enable startup notifications (true/false)
ENABLE_STARTUP_NOTIFICATIONS=true

# Enable shutdown notifications (true/false)
ENABLE_SHUTDOWN_NOTIFICATIONS=true

# Notification delay (seconds)
NOTIFICATION_DELAY=0.1

# =============================================================================
# DOCKER SETTINGS (Docker kullanıyorsanız)
# =============================================================================

# Database user (Docker)
DB_USER=kirvehub

# Database password (Docker)
DB_PASSWORD=kirvehub_pass

# Redis URL (Docker)
REDIS_URL=redis://redis:6379

# =============================================================================
# MONITORING SETTINGS
# =============================================================================

# Enable health checks (true/false)
ENABLE_HEALTH_CHECKS=true

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# Enable metrics (true/false)
ENABLE_METRICS=false

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# Enable auto backup (true/false)
ENABLE_AUTO_BACKUP=true

# Backup interval (hours)
BACKUP_INTERVAL=24

# Backup retention (days)
BACKUP_RETENTION=7

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Enable WebSocket (true/false)
ENABLE_WEBSOCKET=false

# WebSocket port
WEBSOCKET_PORT=8001

# Enable API endpoints (true/false)
ENABLE_API_ENDPOINTS=false

# API rate limit
API_RATE_LIMIT=100

# =============================================================================
# DEVELOPMENT SETTINGS (Sadece development için)
# =============================================================================

# Enable hot reload (true/false)
ENABLE_HOT_RELOAD=false

# Enable debug logging (true/false)
ENABLE_DEBUG_LOGGING=false

# Test mode (true/false)
TEST_MODE=false 